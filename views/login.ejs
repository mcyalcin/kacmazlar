<!DOCTYPE html>
<html>
<head>
  <% include partials/header.ejs %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
</head>
<body>
<div class="container">

  <div class="col-sm-6 col-sm-offset-3">

  <h1><span class="fa fa-sign-in"></span> Kullanıcı Girişi</h1>

    <% if (typeof message != 'undefined' && message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>
    <form action="/login" method="post">
      <div class="form-group">
        <label for="user">Kullanıcı Adı</label>
        <input id="user" type="text" class="form-control" name="email">
      </div>
      <div class="form-group">
        <label for="pwd">Şifre</label>
        <input id="pwd" type="password" class="form-control" name="password">
      </div>

      <button type="submit" class="btn btn-primary btn-lg">Giriş</button>

    </form>
  </div>
</div>
</body>
</html>